<%- include('../layouts/userLayout/header.ejs') %>
<%-include('../layouts/userLayout/navbar.ejs') %> 
<%-include('../layouts/userLayout/accountsidebar.ejs') %>

<div class="page-wrapper">
  <div class="row">
    <div class="col-lg-12">
      <table class="table table-cart table-mobile">
        <thead>
          <tr>
            <th>No</th>
            <th>Order ID</th>
            <th>Order Date</th>
            <th>Total Amount</th>
            <th>Payment</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% if (orders.length > 0) {
            orders.reverse().forEach((order, i) => { %>
              <tr>
                <td><%= i+1 %></td>
                <td><%= order._id %></td>
                <td><%= order.date.toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: '2-digit' }).replace(/\//g, '-') %></td>
                <td><%= order.totalAmount %></td>
                <td><%= order.paymentMethod %></td>
                <td>
                  <a class="btn btn-outline-primary-2" href="/vieworder/<%= order._id %>">VIEW</a>
                </td>
              </tr>
            <% })
          } else { %>
            <h1 class="d-flex justify-content-center">You Have No Orders</h1>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>




